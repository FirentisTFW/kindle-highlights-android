<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (optional) -->
    <item android:drawable="@android:color/white" />

    <!-- Border -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/teal" />
        </shape>
    </item>
</layer-list>
