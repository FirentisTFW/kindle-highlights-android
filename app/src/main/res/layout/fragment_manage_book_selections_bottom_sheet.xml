<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".ui.selections.ManageBookSelectionsBottomSheetFragment">

        <TextView
            style="@style/HeadlineMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manageBookSelections_selectedBooks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectedBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />

        <TextView
            style="@style/HeadlineMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/manageBookSelections_otherBooks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOtherBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
