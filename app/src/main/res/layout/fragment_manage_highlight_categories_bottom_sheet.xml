<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.managehighlightcategories.ManageHighlightCategoriesBottomSheetFragment">

    <!--TODO: Display categories (one list for assigned categories
            and another one for all categories)-->

    <TextView
        style="@style/HeadlineMediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assigned categories" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssignedCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp" />

    <TextView
        style="@style/HeadlineMediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Other categories" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOtherCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp" />
</LinearLayout>